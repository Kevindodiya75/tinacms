{
    "name": "Tina CMS Hugo Starter",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/hugo:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "tamasfe.even-better-toml",
                "davidanson.vscode-markdownlint",
                "csstools.postcss"
            ]
        }
    },
    "postCreateCommand": "cd tina-hugo-starter && npm install && npm run dev",
    "remoteUser": "node"
}